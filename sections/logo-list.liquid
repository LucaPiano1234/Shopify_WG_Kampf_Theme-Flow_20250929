{{ 'section-logo-list.min.css' | asset_url | stylesheet_tag }}

{% case section.settings.colors %}
  {% when 'white' %}
    {%- assign color_scheme = 'color-scheme--white' -%}
  {% when 'light' %}
    {%- assign color_scheme = 'color-scheme--light' -%}
  {% when 'accent' %}
    {%- assign color_scheme = 'color-scheme--accent' -%}
  {% when 'dark' %}
    {%- assign color_scheme = 'color-scheme--dark' -%}
{% endcase %}

<div
  class="wrapper-spacing--v wrapper-spacing--h content-align--{{ section.settings.section_header_alignment }} {{ color_scheme }}{% if request.visual_preview_mode %} section-preview{% else %} show-on-scroll{% endif %}"
  data-wetheme-section-type="image--logo-list" 
  data-wetheme-section-id="{{ section.id }}"
  style="--padding-section-top: {{ section.settings.section_padding_top }}px; --padding-section-bottom: {{ section.settings.section_padding_bottom }}px;"
>

<div class="wrapper logo-bar-section--{{ section.id }}">

  {% comment %} Section title and description {% endcomment %}
  {% render 'dynamic-section-header' with section_title: section.settings.title, section_description: section.settings.description, alignment: section.settings.section_header_alignment %}

	<div>

    {% if section.blocks.size > 0 %}
      <div class="logo-bar">
        {% for block in section.blocks %}
          {% comment %}Use smaller of image size or width settings{% endcomment %}
          {% if section.settings.width > block.settings.image.width %}
            {% assign width = block.settings.image.width %}
          {% else %}
            {% assign width = section.settings.width %}
          {% endif %}

          <div
            class="logo-bar__item{% unless section.settings.override_border_radius %} block-radius-clip{% endunless %}"
            style="width: {{ width }}px"
            data-animate
            data-animate-order="{% render 'block-animation-offset', 
              title: section.settings.title, 
              description: section.settings.description, 
              base: forloop.index 
            %}"
            {{ block.shopify_attributes }}
          >
            {% if block.settings.link != blank %}
              <a href="{{ block.settings.link }}" class="logo-bar__link">
            {% endif %}
            {% if block.settings.image != blank %}
              {% assign image_class = 'logo-bar__image' %}
              {% unless section.settings.override_border_radius %}
                {% assign image_class = image_class | append: ' block-radius' %}
              {% endunless %}
              {% render 'responsive-image' with block.settings.image, class: image_class, default_size: '240x' %}
            {% else %}
              {% assign placeholder_class = 'icon icon--placeholder' %}
              {% unless section.settings.override_border_radius %}
                {% assign placeholder_class = placeholder_class | append: ' block-radius' %}
              {% endunless %}
              {{ 'logo' | placeholder_svg_tag: placeholder_class }}
            {% endif %}
            {% if block.settings.link != blank %}
              </a>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    {% endif %}

    {% if section.blocks.size == 0 %}
      <div class="placeholder-noblocks">
  {{ 'general.onboarding.no_content' | t }}
</div>

    {% endif %}
  </div>
</div>
</div>

{% schema %}
{
  "name": "t:sections.image--logo-list.name",
  "class": "homepage-section--logo-bar-wrapper",
  "max_blocks": 20,
  "settings": [
    {
      "type": "header",
      "content": "t:all.Heading"
    },
    {
      "type": "text",
      "id": "title",
      "label": "t:all.Heading"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "t:all.Description"
    },
    {
      "type": "text_alignment",
      "id": "section_header_alignment",
      "label": "t:all.Alignment",
      "default": "center"
    },
    {
      "type": "header",
      "content": "t:all.Logo"
    },
    {
      "type": "range",
      "id": "width",
      "label": "t:all.Logo_width",
      "min": 100,
      "max": 240,
      "step": 10,
      "unit": "t:all.px",
      "default": 150
    },
    {
      "type": "checkbox",
      "id": "override_border_radius",
      "label": "t:all.override_border_radius",
      "info": "t:all.override_border_radius_info",
      "default": false
    },
    {
      "type": "header",
      "content": "t:all.Layout"
    },
    {
      "type": "range",
      "id": "section_padding_top",
      "label": "t:all.Spacing_top",
      "min": 0,
      "max": 150,
      "step": 5,
      "unit": "t:all.px",
      "default": 60
    },
    {
      "type": "range",
      "id": "section_padding_bottom",
      "label": "t:all.Spacing_bottom",
      "min": 0,
      "max": 150,
      "step": 5,
      "unit": "t:all.px",
      "default": 60
    },
    {
      "type": "header",
      "content": "t:all.Color"
    },
    {
      "type": "select",
      "id": "colors",
      "label": "t:all.Color_scheme",
      "default": "light",
      "options": [
        {
          "value": "white",
          "label": "t:all.Default"
        },
        {
          "value": "light",
          "label": "t:all.First"
        },
        {
          "value": "accent",
          "label": "t:all.Second"
        },
        {
          "value": "dark",
          "label": "t:all.Third"
        }
      ]
    }
  ],
  "blocks": [
    {
      "type": "logo_image",
      "name": "t:all.Logo",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "t:all.Image",
          "info": "t:sections.image--logo-list.blocks.settings.logo.info"
        },
        {
          "type": "header",
          "content": "t:all.Link"
        },
        {
          "type": "url",
          "id": "link",
          "label": "t:all.Link",
          "info": "t:all.Optional"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.image--logo-list.presets.name",
      "blocks": [
        {
          "type": "logo_image"
        },
        {
          "type": "logo_image"
        },
        {
          "type": "logo_image"
        },
        {
          "type": "logo_image"
        }
      ]
    }
  ],
  "disabled_on": {
    "groups": [
      "header",
      "custom.overlay"
    ]
  }
}
{% endschema %}
