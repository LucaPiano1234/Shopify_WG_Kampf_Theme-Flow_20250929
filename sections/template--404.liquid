{{ 'template-404.min.css' | asset_url | stylesheet_tag: preload: true }}

<div class="wrapper-spacing--h wrapper-spacing--v--template show-on-scroll">
  <div class="width--content">
    <div class="error-page--wrapper" style="text-align: {{ settings.template_heading_alignment }};">
      <div class="template-title--wrapper">
        <h1 class="page--title template-title" data-animate data-animate-order="1" style="text-align: {{ settings.template_heading_alignment }};">{{ 'general.404.title' | t }}</h1>
        <p class="template-description" data-animate data-animate-order="2">{{ 'general.404.subtext_html' | t }}</p>
      </div>
      <a href="{{ routes.all_products_collection_url }}" class="btn" data-animate data-animate-order="3">{{ 'general.continue_shopping' | t }}</a>
    </div>
  </div>
</div>
