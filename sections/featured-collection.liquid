{{ 'section-featured-collection.min.css' | asset_url | stylesheet_tag }}

{% liquid 
  assign wrapper_classes = ''
  assign featured_collection = section.settings.collection

  if section.settings.layout_style == 'slider' and settings.hover_navigation_desktop == 'above'
    if section.settings.title != blank or section.settings.description != blank
      assign wrapper_classes = 'remove--spacing'
    endif
  endif

  assign header_has_content = false
  if section.settings.title != blank or section.settings.description != blank
    assign header_has_content = true
  endif

  assign header_and_button_centered = false
  if section.settings.section_header_alignment == 'center' and section.settings.button_alignment == 'center'
    assign header_and_button_centered = true
  endif

  if section.settings.button_position == 'above_products' and header_and_button_centered == false
    assign header_button_align_class = ''
    if section.settings.section_header_alignment == 'left' and section.settings.button_alignment == 'right'
      assign header_button_align_class = 'header-left-button-right'
    endif

    if section.settings.section_header_alignment == 'right' and section.settings.button_alignment == 'left'
      assign header_button_align_class = 'header-right-button-left'
    endif
  endif 
%}

{% if section.settings.override_button_colors %}
  {% assign grid_item_id = 'grid-item--' | append: section.id %}
  {% render 'button-color-overrides' with
    id: grid_item_id,
    style: settings.quick_shop_button_style,
    text_color: section.settings.button_text_color,
    background_color: section.settings.button_background_color
  %}
{% endif %}

{% if section.settings.show_view_all %}
  {% capture view_all_button %}
    {%- liquid
      assign view_all_label = 'collections.general.view_all' | t
      assign view_all_aria_label = 'collections.general.view_all_label' | t: collection_name: featured_collection.title
      assign view_all_id = 'view-all--' | append: section.id
      assign view_all_classes = 'text-' | append: section.settings.button_alignment | append: ' show-view-all--button'
      assign view_all_btn_attributes = ''

      if section.settings.button_position == 'above_products'
        assign animation_order = '2'
        if section.settings.title != blank and section.settings.description != blank
          assign animation_order = '3'
        elsif section.settings.title == blank and section.settings.description == blank
          assign animation_order = '1'
        endif

        assign view_all_btn_attributes = 'data-animate data-animate-order="' | append: animation_order | append: '"'
      else
        assign animation_order = '4'
        assign view_all_btn_attributes = 'data-animate data-animate-order="' | append: animation_order | append: '"'
      endif
    -%}

    {% if section.settings.override_button_colors %}
      {% render 'button-color-overrides' with
        id: view_all_id,
        style: section.settings.buttons_style,
        text_color: section.settings.button_text_color,
        background_color: section.settings.button_background_color
      %}
    {% endif %}
    
    {% render 'dynamic-section-button' with
      id: view_all_id,
      link: featured_collection.url,
      label: view_all_label,
      aria_label: view_all_aria_label,
      style: section.settings.buttons_style,
      div_classes: view_all_classes,
      attributes: view_all_btn_attributes
    %}
  {% endcapture %}
{% endif %}

<div
  class="wrapper-spacing--v wrapper-spacing--h color-scheme--{{ section.settings.colors }}{% if request.visual_preview_mode %} section-preview{% else %} show-on-scroll{% endif %}{% if section.settings.layout_style == 'slider' %} slider-nav--{{ settings.hover_navigation_desktop }}{% endif %}{% if header_has_content %} {{ header_button_align_class }}{% endif %}"
  data-wetheme-section-type="collection--featured-collection" 
  data-wetheme-section-id="{{ section.id }}"
  style="--padding-section-top: {{ section.settings.section_padding_top }}px; --padding-section-bottom: {{ section.settings.section_padding_bottom }}px;"
>
  <div class="width--content">
    {% comment %} Section title and description {% endcomment %}
    <div class="section-header-wrapper{% if header_has_content %} header-align--{{ section.settings.section_header_alignment }}{% endif %}">
      {% render 'dynamic-section-header' with section_title: section.settings.title, section_description: section.settings.description, wrapper_classes: wrapper_classes, alignment: section.settings.section_header_alignment %}

      {% if section.settings.button_position == 'above_products' %}
        {{ view_all_button }}
      {% endif %}
    </div>

    <div class="homepage-indiv-section-wrapper grid--full homepage-featured-content-wrapper">
      {% liquid 
        assign collection = collections[section.settings.collection]
        assign tablet_item_width = 'medium--one-third'

        case section.settings.grid-desktop
          when 2
            assign desktop_item_width = 'large--one-half'
            assign tablet_item_width = 'medium--one-half'
          when 3
            assign desktop_item_width = 'large--one-third'
          when 4
            assign desktop_item_width = 'large--one-quarter'
          when 5
            assign desktop_item_width = 'large--one-fifth'
          when 6
            assign desktop_item_width = 'large--one-sixth'
        endcase

        case section.settings.grid-mobile
          when "1"
          assign mobile_item_width = 'small--one-whole'
          when "2"
            assign mobile_item_width = 'small--one-half'
        endcase

        assign grid_item_width = desktop_item_width | append: ' ' | append: tablet_item_width | append: ' ' | append: mobile_item_width
        assign product_limit = section.settings.products_to_show
      %}

      <div 
        class="grid-uniform product-grid--wrapper{% if section.settings.layout_style == 'slider' %} product-grid--slider-enabled{% endif %}"
        {%- if section.settings.layout_style == 'slider' -%} data-grid-slider-wrapper{%- endif -%}
      >
        {%- if section.settings.layout_style == 'slider' -%}
          <safe-load-scripts class="hidden">
            <script src="{{ 'component-grid-slider.js' | asset_url }}" defer="defer" type="module" data-flow-load-key="grid-slider"></script>
          </safe-load-scripts>

          <!-- navigation -->
          {% assign navigation_id = 'navigation--' | append: section.id %}
          <div class="swiper-btn--wrapper small-hide swiper-btn-layout__{{ settings.hover_navigation_desktop }}">
            <div class="swiper-button--prev btn dynamic-section-button--{{ navigation_id }} swiper-button--grid-slider">
              {% render 'theme-icon', icon: 'chevron_left' %}
            </div>
            <div class="swiper-button--next btn dynamic-section-button--{{ navigation_id }} swiper-button--grid-slider">
              {% render 'theme-icon', icon: 'chevron_right' %}
            </div>
          </div>
          {% if section.settings.override_button_colors %}
            {% render 'button-color-overrides' with
              id: navigation_id,
              style: 'filled',
              text_color: section.settings.button_text_color,
              background_color: section.settings.button_background_color
            %}
          {% endif %}

          <grid-slider 
            class="swiper"
            data-slides-per-view-desktop="{{ section.settings.grid-desktop }}"
            data-slides-per-view-mobile="{{ section.settings.grid-mobile }}"
            data-product-limit="{{ product_limit }}"
            data-grid-spacing-desktop="{{ settings.grid_spacing }}"
            data-grid-spacing-mobile="{{ settings.grid_spacing | times: 0.75 }}"
            data-animate-overflow-container
          >
            <div class="swiper-wrapper">
        {%- endif -%}
          {% for product in featured_collection.products limit: product_limit %}
            
            {% comment %}
              Set the default grid_item_width if no variable is set
            {% endcomment %}
            {% unless grid_item_width %}
              {% assign grid_item_width = 'large--one-third medium--one-half' %}
            {% endunless %}

            {% if section.settings.layout_style == 'slider' %}
              <div
                class="grid__item {{ grid_item_width }} swiper-slide"
                data-animate
                data-animate-order="{% render 'block-animation-offset', 
                  title: section.settings.title, 
                  description: section.settings.description, 
                  base: forloop.index
                %}"
                data-animate-overflow-item
              >
            {% else %}
              <div
                class="grid__item {{ grid_item_width }} featured-product--grid-item"
                data-animate
                data-animate-order="{% render 'block-animation-offset', 
                  title: section.settings.title, 
                  description: section.settings.description, 
                  base: forloop.index
                %}"
              >
            {% endif %}
              {% assign badge_anim_order = forloop.index | plus: 2 %}
              {% render 'grid-view-item',
                product: product,
                collection: collection,
                enable_badges: settings.show_badges,
                grid_count_desktop: section.settings.grid-desktop,
                grid_count_mobile: section.settings.grid-mobile,
                section_color_scheme: section.settings.colors,
                section_id: section.id,
                badge_anim_order: badge_anim_order,
                show_highlight: section.settings.show_highlight,
                highlight_icon: section.settings.highlight_icon,
                highlight_custom_icon: section.settings.highlight_custom_icon,
                highlight_heading: section.settings.highlight_heading,
                highlight_reference: section.settings.highlight_reference,
                highlight_text_color: section.settings.highlight_text_color,
                highlight_background_color: section.settings.highlight_background_color,
                highlight_alignment: section.settings.highlight_alignment,
                highlight_font_size: section.settings.highlight_font_size,
                highlight_collapsible_tab: section.settings.highlight_collapsible_tab,
                highlight_open_close_icon: section.settings.highlight_open_close_icon,
                highlight_button_borders: section.settings.highlight_button_borders
              %}
            </div>

          {% else %}
            {% for i in (1..product_limit) %}
              {% capture svg_index %}{% cycle 1, 2, 3, 4, 5, 6 %}{% endcapture %}
              {% capture svg_index_reversed %}{% cycle 6, 5, 4, 3, 2, 1 %}{% endcapture %}
              {% if section.settings.layout_style == 'slider' %}
                <div
                  class="grid__item {{ grid_item_width }} swiper-slide"
                  data-animate
                  data-animate-order="{% render 'block-animation-offset', 
                    title: section.settings.title, 
                    description: section.settings.description, 
                    base: forloop.index
                  %}"
                  data-animate-overflow-item
                >
              {% else %}
                <div
                  class="grid__item {{ grid_item_width }} featured-product--grid-item"
                  data-animate
                  data-animate-order="{% render 'block-animation-offset', 
                    title: section.settings.title, 
                    description: section.settings.description, 
                    base: forloop.index
                  %}"
                >
              {% endif %}
                {% assign badge_anim_order = forloop.index | plus: 2 %}
                {% render 'grid-view-item-placeholder',
                  svg_index: svg_index,
                  svg_index_reversed: svg_index_reversed,
                  section_color_scheme: section.settings.colors,
                  section_id: section.id,
                  badge_anim_order: badge_anim_order,
                  show_highlight: section.settings.show_highlight,
                  highlight_icon: section.settings.highlight_icon,
                  highlight_custom_icon: section.settings.highlight_custom_icon,
                  highlight_heading: section.settings.highlight_heading,
                  highlight_reference: section.settings.highlight_reference,
                  highlight_text_color: section.settings.highlight_text_color,
                  highlight_background_color: section.settings.highlight_background_color,
                  highlight_alignment: section.settings.highlight_alignment,
                  highlight_font_size: section.settings.highlight_font_size,
                  highlight_collapsible_tab: section.settings.highlight_collapsible_tab,
                  highlight_open_close_icon: section.settings.highlight_open_close_icon,
                  highlight_button_borders: section.settings.highlight_button_borders
                %}
              </div>
            {% endfor %}
          {% endfor %}
        {%- if section.settings.layout_style == 'slider' -%}
            </div>
          </grid-slider>

          <!-- pagination -->
          <div class="swiper-pagination"></div>

          <!-- scrollbar -->
          <div class="swiper-scrollbar large-hide"></div>
        {%- endif -%}
      </div>

      {% if section.settings.button_position == 'below_products' %}
        {{ view_all_button }}
      {% endif %}
    </div>
  </div>
</div>

